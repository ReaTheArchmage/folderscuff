<Window x:Class="SmartSearch.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ResizeMode="NoResize"
        Width="600" Height="100"
        Title="SmartSearch"
        MouseMove="Window_MouseMove"
        MouseLeave="Window_MouseLeave">

    <Border x:Name="MainBorder"
            Background="#FF1E1E1E"
            CornerRadius="10"
            Padding="8">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Row 0: search box + toggle -->
            <Grid Grid.Row="0">
                <TextBox x:Name="SearchBox"
                         Background="#FF2E2E2E"
                         Foreground="White"
                         FontSize="16"
                         BorderThickness="0"
                         VerticalContentAlignment="Center"
                         KeyDown="SearchBox_KeyDown"
                         TextChanged="SearchBox_TextChanged"
                         Margin="0,0,50,0" />

                <CheckBox x:Name="TopmostToggle"
                          Content="📌"
                          FontSize="16"
                          ToolTip="Toggle Always On Top"
                          HorizontalAlignment="Left"
                          VerticalAlignment="Center"
                          Width="45"
                          Height="20"
                          Margin="539,0,0,0"
                          Checked="TopmostToggle_Checked"
                          Unchecked="TopmostToggle_Unchecked"
                          IsChecked="True"
                          Background="Transparent"
                          Foreground="White"
                          BorderThickness="0"/>
            </Grid>

            <!-- Row 1: results list -->
            <ListBox x:Name="ResultsList"
                     Grid.Row="1"
                     Background="#FF2E2E2E"
                     Foreground="White"
                     BorderThickness="0"
                     Visibility="Collapsed"
                     MouseDoubleClick="ResultsList_MouseDoubleClick"
                     KeyboardNavigation.TabNavigation="Cycle">

            </ListBox>
        </Grid>
    </Border>
</Window>
